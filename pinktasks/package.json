{
  "name": "pinktasks",
  "displayName": "PinkTasks",
  "description": "A todo tasklist with a touch of pink",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.102.0" 
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
  "onLanguage:javascript",
  "onLanguage:typescript",
  "onLanguage:javascriptreact",
  "onLanguage:typescriptreact",
  "onLanguage:python",
  "onLanguage:css",
  "onLanguage:html",
  "onLanguage:markdown",
  "onLanguage:plaintext",
  "onLanguage:json"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PinkTasks Settings",
      "properties": {
        "pinktasks.scanTasks": {
          "type": "array",
          "default": ["TODO"],
          "description": "List of task keywords to scan for in files.",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pinktasksSidebar",
          "title": "Tasks ðŸŒº",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "pinktasksSidebar": [
        {
          "icon": "media/icon.svg",
          "id": "pinktasksView",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "pinktasks.addTag",
          "when": "view == pinktasksView",
          "group": "customTag"
        },
        {
          "command": "pinktasks.removeTag",
          "when": "view == pinktasksView",
          "group": "customTag"
        },
        {
          "command": "pinktasks.exportTasksJson",
          "when": "view == pinktasksView",
          "group": "z_export"
        },
        {
          "command": "pinktasks.exportTasksMarkdown",
          "when": "view == pinktasksView",
          "group": "z_export"
        }
      ],
      "view/item/context": [
        {
          "command": "pinktasks.markAsDone",
          "when": "view == pinktasksView && viewItem == task",
          "group": "inline"
        }
      ]
    },
    "commands": [
    {
      "command": "pinktasks.scanTasks",
      "title": "Scan Tasks"
    },
    {
      "command": "pinktasks.openFile",
      "title": "Open Task File"
    },
    {
      "command": "pinktasks.addTag",
      "title": "Add Custom Tag +"
    },
    {
      "command": "pinktasks.exportTasksJson",
      "title": "Export Tasks as JSON"
    },
    {
      "command": "pinktasks.exportTasksMarkdown",
      "title": "Export Tasks as Markdown"
    },
    {
      "command": "pinktasks.markAsDone",
      "title": "Mark Task as Done"
    },
    {
      "command": "pinktasks.removeTag",
      "title": "Remove Custom Tag -"
    }
  ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}

